{
  "name": "AngularTestProject",
  "version": "0.0.1",
  "scripts": {
    "start": "concurrent \"npm run tsc:w\" \"npm run lite\" \"npm run watch:sass\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "build:sass": "node-sass app/styles/sass/ -o  app/styles/css",
    "watch:sass": "npm run build:sass && node-sass app/styles/sass/ -wo app/styles/css/"
  },
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "angular-in-memory-web-api": "~0.3.0",
    "core-js": "^2.4.1",
    "node-sass": "^4.5.3",
    "raw-loader": "^0.5.1",
    "rxjs": "5.0.1",
    "sass-loader": "^6.0.6",
    "systemjs": "0.19.40",
    "underscore": "1.8.3",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "concurrently": "^3.2.0",
    "lite-server": "^2.2.2",
    "typescript": "~2.1.0"
  }
}
